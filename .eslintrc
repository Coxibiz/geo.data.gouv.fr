{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": [
    "standard",
    "standard-react"
    // "plugin:jsx-a11y/strict"
  ],
  "plugins": [
    "jsx-a11y"
  ],
  "globals": {
    "__DEV__": false,
    "__TEST__": false,
    "__PROD__": false
  },
  "rules": {
    "comma-dangle": "off",
    "indent": "warn",
    "jsx-quotes": [2, "prefer-single"],
    "key-spacing": "off",
    "no-console": "warn",
    "no-debugger": "error",
    "no-irregular-whitespace": "off",
    "object-curly-spacing": [2, "always"],
    "react/prop-types": "warn",
    "space-before-function-paren": "off"
  },
  "overrides": [
    {
      "files": [
        "*.test.js"
      ],
      "env": {
        "mocha": true
      },
      "globals": {
        "expect": true
      },
      "plugins": [
        "mocha"
      ],
      "rules": {
        "mocha/no-exclusive-tests": "error",
        "no-unused-expressions": "off"
      }
    }
  ]
}
